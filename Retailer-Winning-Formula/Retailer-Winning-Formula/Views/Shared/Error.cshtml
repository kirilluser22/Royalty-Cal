@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="my-5">
    <h1 class="text-danger text-center">Error.</h1>
    <h2 class="text-danger text-center">An error occurred while processing your request.</h2>
    <center>
        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
            <p>
                <strong>Status Code:</strong> <code>@Model.StatusCode</code>
            </p>
            <p>
                <strong>Message:</strong> <code>@Model.Message</code>
            </p>
        }
        <button class="btn btn-outline-dark" onclick="goBack()">Go Back</button>
    </center>
</div>
@section Scripts{ 
<script>
    function goBack() { window.history.back(); }
</script>
}