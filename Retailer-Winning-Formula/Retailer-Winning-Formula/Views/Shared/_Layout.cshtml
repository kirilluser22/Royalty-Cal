<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retailer_Winning_Formula</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/slider.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/f982e94d70.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/11.0.2/css/bootstrap-slider.css" integrity="sha512-SZgE3m1he0aEF3tIxxnz/3mXu/u/wlMNxQSnE0Cni9j/O8Gs+TjM9tm1NX34nRQ7GiLwUEzwuE3Wv2FLz2667w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .validationField, .error {
            font-family: "AktivMedium", sans-serif;
            font-size: 13px;
            color: red;
        }
    </style>
</head>
<body>
    <div class="float__droppable--content drop__dropdown1">
        <div class="head__droppable--content">
            <a href="#" class="back__head"><img src="~/img/arrowbackfloat.svg" alt="arrowbackfloat"></a>
            <p>smarter living plans</p>
            <a href="#" class="close__modal">
                <img src="~/img/closeicon.png" alt="close">
            </a>
        </div>
        <div class="content__droppable">
            <div class="float__menu--list">
                <ul>
                    <li><a href="#">furniture plan</a></li>
                    <li><a href="#">appliance plan</a></li>
                    <li><a href="#">home systems plan</a></li>
                </ul>
            </div>

            <div class="bottom__info--content">
                <p>Smarter Living is about making life more convenient.</p>
                <div class="float__image--content">
                    <img src="~/img/floatimage.png" alt="floatimage">
                </div>
            </div>
        </div>
    </div>
    <div class="float__menu">

        <div class="float__menu--list">
            <ul>
                <li class="droppable__float"><a href="#" data-drop="drop__dropdown1">smarter living plans</a></li>
                <li><a href="#">SERVICE REQUEST</a></li>
                <li><a href="#">ABOUT US</a></li>
                <li><a href="#">BLOG</a></li>
                <li><a href="#">PRODUCTS</a></li>
                <li><a href="#">CUSTOMER PORTAL</a></li>
                <li class="droppable__float"><a href="#" data-drop="drop__dropdown2"><img src="~/img/flagicon.svg" alt="flagicon"> EN</a></li>
            </ul>

            <div class="float__menu--buttons">
                <a href="#" class="quote__button">GET A FREE QUOTE</a>
                <a href="#" class="login__button">LOGIN</a>
            </div>
        </div>
    </div>
    <header>
        <div class="container-fluid">
            <div class="outer__header">
                <div class="header__logo">
                    <a href="@Url.Action("Index","Home")"><img src="~/img/headerlogo.png" alt="headerlogo"></a>
                </div>
                <div class="header__menu">
                    <ul>
                        <li class="dropdown__header">
                            <a href="#">SMARTER LIVING PLANS <span><img src="~/img/menuarrow.svg" alt="menuarrow"></span></a>
                            <div class="dropdown__box">
                                <ul>
                                    <li><a href="#">FURNITURE PLAN</a></li>
                                    <li><a href="#">APPLIANCE PLAN</a></li>
                                    <li><a href="#">HOME SYSTEMS PLAN</a></li>
                                </ul>
                            </div>
                        </li>
                        <li><a href="#">SERVICE REQUEST</a></li>
                        <li><a href="#">ABOUT US</a></li>
                        <li><a href="#">BLOG</a></li>
                        <li><a href="#">PRODUCTS</a></li>
                        <li><a href="#">CUSTOMER PORTAL</a></li>
                    </ul>
                </div>
                <div class="header__buttons">
                    <a href="#" class="quote__button">GET A FREE QUOTE</a>
                    <a href="#" class="login__button">LOGIN</a>
                </div>
                <div class="header__language">
                    <a href="#">
                        <span><img src="~/img/langicon.svg" alt="langicon"></span>
                        EN
                        <img src="~/img/langarrow.svg" alt="langarrow">
                    </a>
                </div>
                <div class="header__small">
                    <div class="profile__header">
                        <a href="#">
                            <img src="~/img/profileicon.svg" alt="profile">
                        </a>
                    </div>
                    <div class="menu__button">
                        <a href="#">
                            <span></span>
                            <span></span>
                            <span></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>


    @RenderBody()

    <footer>
        <div class="container-fluid">
            <div class="outer__footer">
                <div class="footer__top">
                    <div class="footer__column--main">
                        <a href="#">
                            <img src="~/img/zucoralogo.png" alt="logo">
                        </a>
                        <ul>
                            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                        </ul>
                    </div>
                    <div class="footer__menu">
                        <h6>ABOUT US</h6>
                        <ul>
                            <li><a href="#">Our Story</a></li>
                            <li><a href="#">Our Team</a></li>
                            <li><a href="#">Our Culture</a></li>
                        </ul>
                    </div>

                    <div class="footer__menu">
                        <h6>JOIN US</h6>
                        <ul>
                            <li><a href="#">Community</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Careers</a></li>
                            <li><a href="#">FAQ</a></li>
                        </ul>
                    </div>

                    <div class="footer__menu">
                        <h6>OUR PRODUCTS</h6>
                        <ul>
                            <li><a href="#">Shop Now</a></li>
                            <li><a href="#">Orders & Returns</a></li>
                            <li><a href="#">Retailers</a></li>
                        </ul>
                    </div>
                    <div class="footer__button">
                        <a href="#">GET A FREE QUOTE</a>
                    </div>
                </div>
                <div class="footer__bottom">
                    <div class="footer__bottom--info">

                        <a href="#" class="logo__bottom">
                            <img src="~/img/zucorasmall.png" alt="zucorasmall">
                        </a>
                        <ul>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Conditions of Use</a></li>
                            <li><a href="#">Member Service Agreement</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $('[data-toggle="tooltip"]').tooltip()
    </script>
</body>
</html>
